<Window x:Class="LANshare.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANshare"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1"  Grid.Row="0" Style="{StaticResource listHeaderStyle}" >
            <Label Style="{StaticResource listHeaderTextStyle}" FontFamily="Gadugi" FontWeight="Bold" Foreground="#FFF9F9DD" HorizontalAlignment="Center" Margin="14,-5,30,-5" VerticalAlignment="Stretch" FontSize="16" Width="158" HorizontalContentAlignment="Center">My Settings</Label>
        </Border>
        <Border BorderBrush="Aquamarine" Grid.Column="1" Grid.Row="1">
            <ListView Name="Personal_Settings" Background="#B2EDF7BF" FontFamily="Gadugi" FontSize="14" MinWidth="210" Margin="0" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="100" />

                            </Grid.ColumnDefinitions>
                            <!--<TextBlock Grid.Column="0" Text="{Binding Name}" Margin="10" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2" Text="{Binding IpAddress}" Margin="10" HorizontalAlignment="Right"/>
                            -->
                        </Grid>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Grid.Background>
            <ImageBrush ImageSource="Media/tree.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>
</Window>
