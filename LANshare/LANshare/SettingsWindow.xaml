<Window x:Class="LANshare.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANshare"        
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="600" Foreground="{x:Null}"
        Style="{StaticResource StandardStyle}" MouseDown="Window_MouseDown" >
    <Window.Background>
        <ImageBrush ImageSource="Media/Images/ApplicationImages/black.jpg" TileMode="FlipXY"/>
    </Window.Background>
    <Grid Style="{StaticResource windowStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
            <Button Width="22" Height="22" Click="Minimiza_Button_Click" Margin="5,0,0,0" >
                <Button.Background>
                    <ImageBrush ImageSource="Media/Images/ApplicationImages/minimizebutton.jpg"/>
                </Button.Background>
            </Button>
            <Button Width="22" Height="22" Click="Maximize_Button_Click" Margin="5,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="Media/Images/ApplicationImages/fullscreenbutton.jpg"/>
                </Button.Background>
            </Button>
            <Button Width="22" Height="22" Click="Exit_Button_Click" Margin="5,0,0,0" >
                <Button.Background>
                    <ImageBrush ImageSource="Media/Images/ApplicationImages/exitbutton.jpg"/>
                </Button.Background>
            </Button>

        </StackPanel>

        <Border Grid.Column="1"  Grid.Row="0" Style="{StaticResource windowHeaderStyle}" Grid.ColumnSpan="2" >
            <Label Style="{StaticResource windowHeaderTextStyle}" Width="158" BorderBrush="#FFABADB3" >My Settings</Label>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" >
            <Grid Style="{StaticResource viewStyle}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <TextBlock Style="{StaticResource textfieldStyle}" Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Right">Profile Picture :</TextBlock>
                <Ellipse  Grid.Column="1" Height="80" Width="80" VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush  ImageSource="{Binding ProfilePicture}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <!--<Image Grid.Column="1" Source="{Binding ProfilePicture}"  VerticalAlignment="Center"/>-->
                <TextBlock Style="{StaticResource textfieldStyle}" Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Right">Name :</TextBlock>
                <TextBlock Style="{StaticResource textfieldStyle}" Grid.Column="1" Grid.Row="1" Text="{Binding Name}" />
                <TextBlock Style="{StaticResource textfieldStyle}" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right">Nickname :</TextBlock>
                <TextBlock Style="{StaticResource textfieldStyle}" Grid.Column="1" Grid.Row="2" Text="{Binding NickName}" />
                <TextBlock Style="{StaticResource textfieldStyle}" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right">Privacy Mode :</TextBlock>
                <TextBlock Style="{StaticResource textfieldStyle}" Grid.Column="1" Grid.Row="3" Text="{Binding PrivacyMode}" />

            </Grid>

        </Border>
    </Grid>
</Window>
