<Window x:Class="LANshare.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANshare"        
        mc:Ignorable="d"
        Title="SettingsWindow"  Foreground="{x:Null}"
        Style="{StaticResource StandardStyle}" MouseDown="Window_MouseDown" >
    <Window.Background>
        <ImageBrush ImageSource="Media/Images/ApplicationImages/black.jpg" TileMode="FlipXY"/>
    </Window.Background>
    <Grid Style="{StaticResource windowStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
            <Button Width="22" Height="22" Click="Minimize_Button_Click" Margin="5,0,0,0" >
                <Button.Background>
                    <ImageBrush ImageSource="Media/Images/ApplicationImages/minimizebutton.jpg"/>
                </Button.Background>
            </Button>
            <Button Width="22" Height="22" Click="Maximize_Button_Click" Margin="5,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="Media/Images/ApplicationImages/fullscreenbutton.jpg"/>
                </Button.Background>
            </Button>
            <Button Width="22" Height="22" Click="Exit_Button_Click" Margin="5,0,0,0" >
                <Button.Background>
                    <ImageBrush ImageSource="Media/Images/ApplicationImages/exitbutton.jpg"/>
                </Button.Background>
            </Button>

        </StackPanel>

        <Border Grid.Column="1"  Grid.Row="0" Style="{StaticResource windowHeaderStyle}" >
            <Label Style="{StaticResource windowHeaderTextStyle}" Width="158" BorderBrush="#FFABADB3" >My Settings</Label>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" >
            <Grid Style="{StaticResource viewStyle}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource StaticTextStyle}" Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Right">User :</TextBlock>
                <TextBlock Style="{StaticResource RelevantTextStyle}" Grid.Column="1" Grid.Row="0" Text="{Binding Name}" />
                
                <TextBlock Style="{StaticResource StaticTextStyle}" Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Right">Profile Picture :</TextBlock>
                <Ellipse  Grid.Column="1" Grid.Row="1" Height="80" Width="80" VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush  ImageSource="{Binding ProfilePicture}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Button Content="Edit" Grid.Column="2" Grid.Row="1" Name="EditPicButton" Width="40" Height="30" Click="Edit" FontSize="16" FontStyle="Italic"   />

                <TextBlock Style="{StaticResource StaticTextStyle}" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right">Nickname :</TextBlock>
                <TextBlock Style="{StaticResource RelevantTextStyle}" Grid.Column="1" Grid.Row="2" Text="{Binding NickName}" />
                <Button Content="Edit" Grid.Column="2" Grid.Row="2" Name="EditNickButton" Width="40" Height="30" Click="Edit" FontSize="16" FontStyle="Italic"  />
                <TextBlock Style="{StaticResource StaticTextStyle}" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right">Privacy Mode :</TextBlock>
                <TextBlock Name="CurrentPrivacyMode" Style="{StaticResource RelevantTextStyle}" Grid.Column="1" Grid.Row="3" Text="{Binding PrivacyMode}" />
                <Button Content="Edit" Grid.Column="2" Grid.Row="3" Name="EditPrivButton" Width="40" Height="30" Click="Edit" FontSize="16" FontStyle="Italic" >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextElement.Foreground" Value="Coral"/>
                                </Trigger>
                                <EventTrigger RoutedEvent="Click">
                                    <EventTrigger.Actions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                                </BooleanAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger.Actions>
                                </EventTrigger>
                            </Style.Triggers>

                            <Setter Property="Background" Value="#00DDDDDD" />
                            <Setter Property="Foreground" Value="Gray"/>
                            <Setter Property="BorderBrush" Value="{x:Null}" />
                            <Setter Property="FontFamily" Value="Gadugi" />

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Foreground="LightGray" Header="Public" Click="PrivacySetter" />
                            <MenuItem Foreground="LightGray" Header="Private" Click="PrivacySetter" />
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

            </Grid>

        </Border>
    </Grid>
</Window>
