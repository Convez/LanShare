<Window x:Class="LANshare.TrayIconWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANshare"
        mc:Ignorable="d"
        Title="TrayIconWindow" Height="300" Width="300" Visibility="Hidden"
        >
    <Window.Resources>
        <ContextMenu x:Key="NotifierContextMenu" Placement="MousePoint" Background="Black" Foreground="Black">
            <MenuItem Foreground="LightGray" Header="Open" Click="Menu_Open"/>
            <MenuItem Foreground="LightGray" Header="People Online" Click="ShowPeople"/>
            <MenuItem x:Name="privacymi" Foreground="LightGray" DataContext="Model.Configuration.CurrentUser" Header="{Binding Path=PrivacyMode}" HeaderStringFormat="Privacy Mode: {0}" Click="SetPrivacy">
                <!--<TextBlock  Foreground="LightGray" Text="{Binding PrivacyMode, StringFormat='Privacy Mode: {0}'}" />-->
            </MenuItem>
            <MenuItem Foreground="LightGray" Header="Settings" Click="OpenSettings"/>
            <MenuItem Foreground="LightGray" Header="Exit" Click="ExitApplication"/>
       
        </ContextMenu>
    </Window.Resources>

</Window>
